<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Security Configuration" 
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../../schemas/view.xsd">
    <form border="true" borderTitle="Password Complexity">
        <column responsiveWidth="4"/>
        <column/>
        <row>
            <item>
                <default binding="passwordComplexityModel"/>
            </item>
        </row>
    </form>
	<component name="_emailNotConfiguredBanner"/>    
	<component name="_backupsNotConfiguredBanner"/>
    <form border="true" borderTitle="Password Reset">
        <column responsiveWidth="4"/>
        <column/>
        <row>
            <item>
                <default binding="fromEmail"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="passwordResetEmailSubject"/>
            </item>
        </row>
        <row>
            <item>
                <html binding="passwordResetEmailBody" pixelWidth="600" pixelHeight="200"/>
            </item>
        </row>
    </form>
    <form border="true" borderTitle="User Self-Registration">
        <column responsiveWidth="4"/>
        <column/>
        <row>
            <item>
                <default binding="userSelfRegistrationGroup"/>
            </item>
        </row>
        <row>
            <item>
                <default binding="allowUserSelfRegistration"/>
            </item>
        </row>
    </form>    
    <actions>
        <defaults/>
    </actions>
    <newParameters/>
</view>
