    	<script>
    		<![CDATA[
    			if(view) {
					view.opened = function(data) {
						isc.BizUtil.createCodeMirror(v1, 'query', 'text/x-sql');
					};
				}
    		]]>
    	</script>
    </inject> -->
    
    <actions>
        <defaults/>
        
        <action className="TestQuery" displayName="Test Query" iconStyleClass="fa fa-cog" visible="notTypeConstant"/>
    </actions>
    <newParameters/>
</view>
