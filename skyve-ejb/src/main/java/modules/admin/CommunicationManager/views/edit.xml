<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Communication Manager"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
	<form>
		<column />
		<row>
			<item>
				<blurb sanitise="basic" escape="false">
	  				<![CDATA[
	  				<p>{i18n:admin.communicationManager.edit.instruction}</p>
	  				]]>
	  			</blurb>
			</item>
		</row>
	</form>
	<form border="true" borderTitle="admin.communicationManager.edit.import.borderTitle">
		<column responsiveWidth="3"/>
		<column />
		<column />
		<row>
			<item>
				<radio binding="importActionType" />
			</item>
			<item>
				<button action="ImportCommunicationSpecifications" pixelWidth="250"/>
			</item>
		</row>
	</form>
	<vbox border="true" borderTitle="admin.communicationManager.edit.export.borderTitle">
	<form >
		<column responsiveWidth="3"/>
		<column />
		<column />
		<row>
			<item>
				<spacer/>
			</item>
			<item>
				<button action="ExportCommunicationSpecifications" pixelWidth="250"/>
			</item>
		</row>
	</form>
		<listMembership binding="currentCommunications" candidatesHeading="Existing Communications" membersHeading="Selected for export"/>
	</vbox>
	<actions>
		<!-- <defaults /> -->
		<download className="ExportCommunicationSpecifications" displayName="admin.communicationManager.actions.exportCommunicationSpecifications.displayName" iconStyleClass="fa fa-download" clientValidation="false" inActionPanel="false"/>
		<upload className="ImportCommunicationSpecifications" displayName="admin.communicationManager.actions.importCommunicationSpecifications.displayName" iconStyleClass="fa fa-upload" clientValidation="true" inActionPanel="false"/>
	</actions>
	<newParameters />
</view>
