<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<document name="CommunicationManager" xmlns="http://www.skyve.org/xml/document" xmlns:v="http://www.skyve.org/xml/view" xsi:schemaLocation="http://www.skyve.org/xml/document ../../../schemas/document.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<documentation>
		<![CDATA[
			<p>The Communication Manager document provides functions to manage system communications and communication Configurations.</p>
		]]>
	</documentation>
	<singularAlias>Communication Manager</singularAlias>
	<pluralAlias>Communication Manager</pluralAlias>
	<iconStyleClass>fa fa-file-pdf-o</iconStyleClass>
	<attributes>
		<text name="pathToZip">
			<documentation>The path of the zip of communication configurations for download</documentation>
			<displayName>admin.communicationManager.pathToZip.displayName</displayName>
			<length>500</length>
		</text>
		<enum name="importActionType" required="true">
			<displayName>admin.communicationManager.importActionType.displayName</displayName>
			<defaultValue>validateOnlyCommunicationConfigurationsAndTemplates</defaultValue>
			<values>
				<value code="validate" description="Validate only communication configurations and templates" />
				<value code="import" description="Validate then import communication configurations and templates" />
			</values>
		</enum>

		<collection name="currentCommunications" type="aggregation">
			<displayName>admin.communicationManager.collection.currentCommunications.displayName</displayName>
			<domain>variant</domain>
			<documentName>Communication</documentName>
			<minCardinality>0</minCardinality>
			<ordering>
				<order sort="ascending" by="description" />
			</ordering>
		</collection>
	</attributes>
</document>
