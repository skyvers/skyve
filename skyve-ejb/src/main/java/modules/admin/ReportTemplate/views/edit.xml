		<tab title="Report Details">
			<form responsiveWidth="12">
				<column responsiveWidth="3"/>
				<column/>
				<column responsiveWidth="1"/>
				<row>
					<item showLabel="true" label="Report Name">
						<blurb>{name}</blurb>
					</item>
				</row>
				<row>
					<item showLabel="true" label="Report Description">
