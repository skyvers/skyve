    <servlet>
        <servlet-name>FacesServlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/pages/error.jsp</location>
	</error-page>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Default</realm-name>
		<form-login-config>
			<form-login-page>/login</form-login-page>
			<form-error-page>/loginError</form-error-page>
		</form-login-config>
	</login-config>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Secured</web-resource-name>
			<!-- Do not secure the home servlet as this ensures the right login page is displayed -->
			<!-- Do not secure faces pages as they are secured by a FacesSecurityFilter -->
			<!-- Secure dynamic image URLs -->
			<url-pattern>/images/dynamic.png</url-pattern>
			<!-- Secure all report URLs -->
			<url-pattern>*.rpt</url-pattern>
			<url-pattern>/export.pdf</url-pattern>
			<url-pattern>/export.html</url-pattern>
			<url-pattern>/export.odt</url-pattern>
			<url-pattern>/export.rtf</url-pattern>
			<url-pattern>/export.odf</url-pattern>
			<url-pattern>/export.txt</url-pattern>
			<url-pattern>/export.csv</url-pattern>
			<url-pattern>/export.xls</url-pattern>
			<url-pattern>/export.ods</url-pattern>
			<url-pattern>/export.xmlss</url-pattern>
			<url-pattern>/export.xml</url-pattern>
			<!-- Image Servlet for HTML reporting through Jasper -->
			<url-pattern>/image/*</url-pattern>
			<!-- Secure customer resource servlet -->
			<url-pattern>/resource/*</url-pattern>
			<url-pattern>/content/*</url-pattern>
			<!-- Secure text search -->
			<url-pattern>/search/*</url-pattern>
			<!-- Secure list view servlet -->
			<url-pattern>/smartlist/*</url-pattern>
			<!-- Secure snap servlet -->
			<url-pattern>/smartsnap/*</url-pattern>
			<!-- Secure tag servlet -->
			<url-pattern>/smarttag/*</url-pattern>
			<!-- Secure previous values servlet -->
			<url-pattern>/smartprev/*</url-pattern>
			<!-- Secure edit view servlet -->
			<url-pattern>/smartedit/*</url-pattern>
			<!-- Secure view generation servlet -->
			<url-pattern>/smartgen/*</url-pattern>
			<!-- Secure map servlet -->
			<url-pattern>/map/*</url-pattern>
			<!-- Do not Secure trackmate servlet - it handles authentication itself -->
			<!-- secure the systems JSPs and HTMLs -->
			<url-pattern>/home.jsp</url-pattern>
			<url-pattern>/pages/htmlEdit/browseImages.jsp</url-pattern>
			<url-pattern>/pages/map/geolocate.jsp</url-pattern>
			<url-pattern>/pages/upload/bizimport.jsp</url-pattern>
			<url-pattern>/pages/upload/blank.jsp</url-pattern>
			<url-pattern>/pages/upload/filePicker.jsp</url-pattern>
			<url-pattern>/pages/upload/progress.jsp</url-pattern>
			<url-pattern>/pages/upload/upload.jsp</url-pattern>
			<!-- secure the upload servlets -->
			<url-pattern>/upload</url-pattern>
			<url-pattern>/bizimport</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Nobody</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- Deny all permission -->
	<security-role>
		<role-name>Nobody</role-name>
	</security-role>
</web-app>
