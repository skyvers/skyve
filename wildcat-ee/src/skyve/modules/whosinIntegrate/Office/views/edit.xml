<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view type="edit" 
		title="Office" 
		xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd" 
		xmlns="http://www.skyve.org/xml/view" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<hbox pixelMemberPadding="10">
		<vbox pixelWidth="400" border="true" borderTitle="Office Details" pixelPadding="10" pixelMemberPadding="10">
		    <form percentageWidth="100">
		        <column pixelWidth="100"/>
		        <column/>
		        <row>
		            <item>
		                <default binding="levelUnit"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="buildingName"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="streetAddress"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="suburb"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="postCode"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="phone"/>
		            </item>
		        </row>
		        <row>
		            <item>
		                <default binding="boundary"/>
		            </item>
		        </row>
		    </form>
		    <hbox>
		    </hbox>
		</vbox>
	    <vbox border="true" borderTitle="Map">
			<map modelName="OfficeMap" percentageWidth="100" percentageHeight="100" />
	    </vbox>
	</hbox>
    <inject>
		<script>
			<![CDATA[
				var inout = null;
				var b = isc.IButton.create({
					title: 'Who\'s In/Out',
					width: 250,
					click: function() {
						if (inout) {
							inout.destroy();
						}
						inout = HTMLPane.create({width:'100%',
													height:'100%',
													contentsType:'page',
													contentsURL:'whosinIntegrate/inout.xhtml',
													contentsURLParams: {i: view._vm.getValue('bizId')}});
						WindowStack.popup(null, 'In/Out', true, [inout], null, null, true);
					}
				});
				v3.addContained(isc.LayoutSpacer.create({width: 100}));
				v3.addContained(b);
			]]>
		</script>
    </inject>
    <actions>
        <defaults/>
    </actions>
</view>

