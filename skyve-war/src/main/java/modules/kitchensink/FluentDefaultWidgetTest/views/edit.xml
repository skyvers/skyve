<?xml version="1.0" encoding="UTF-8"?>
<view name="edit" title="FluentDefaultWidget Test" xmlns="http://www.skyve.org/xml/view"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
		<vbox>
			<form>
				<column />
				<row>
					<item showLabel="false">
						<textArea binding="generatedXml" />
					</item>
				</row>
			</form>
		</vbox>
		<sidebar floatingPixelWidthBreakpoint="1000" percentageWidth="50" >
			<blurb escape="false" sanitise="none" visible="showPreviewDocument">
				<![CDATA[
					<iframe style="border:none;width:100%;height:720px" src="device.xhtml?a=e&m=kitchensink&d={skyveDocumentName}&ua=tablet" />
				]]>
			</blurb>
		</sidebar>
	<actions>
		<defaults />
		<action className="GenerateXML" clientValidation="false" displayName="Generate XML" inActionPanel="true" />
	</actions>
</view>
