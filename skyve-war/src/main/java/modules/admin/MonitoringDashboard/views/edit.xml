<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd" xmlns="http://www.skyve.org/xml/view"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="Monitoring Dashboard"
	xmlns:c="http://www.skyve.org/xml/common">
	<hbox>

		<vbox border="true" borderTitle="Request Type Comparison" widgetId="requestTypeComparisonBox" collapsible="open"
			pixelHeight="300">
			<chart type="pie" modelName="RequestTypeComparisonModel" />
			<form>
				<column />
				<column />
				<column />
				<column />
				<column />
				<column />
				<column />
				<column />
				<row>
					<item>
						<spinner binding="topN">
							<onChangedHandlers>
								<rerender>
									<properties>
										<c:property key="update">requestTypeComparisonBox</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</spinner>
					</item>
					<item>
						<combo binding="requestType">
							<onChangedHandlers>
								<rerender>
									<properties>
										<c:property key="update">requestTypeComparisonBox</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</combo>
					</item>
					<item>
						<combo binding="metric">
							<onChangedHandlers>
								<rerender>
									<properties>
										<c:property key="update">requestTypeComparisonBox</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</combo>
					</item>
					<item>
						<combo binding="period">
							<onChangedHandlers>
								<rerender>
									<properties>
										<c:property key="update">requestTypeComparisonBox</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</combo>
					</item>
				</row>
			</form>
		</vbox>
	</hbox>
	<vbox border="true" borderTitle=" Stats" widgetId="documentStatsBox" collapsible="open" pixelHeight="300">
		<form>
			<column responsiveWidth="3" />
			<column />
			<row>
				<item>
					<combo binding="documentName">
						<onChangedHandlers>
							<rerender>
								<properties>
									<c:property key="update">documentStatsBox</c:property>
								</properties>
							</rerender>
						</onChangedHandlers>
					</combo>
				</item>
			</row>
		</form>
		<hbox responsiveWidth="12" border="true" borderTitle="Create Requests" collapsible="open" pixelHeight="300">
			<chart type="line" modelName="DocumentElapsedTimeModel" responsiveWidth="4" />
			<chart type="line" modelName="DocumentCPUDeltaModel" responsiveWidth="4" />
			<chart type="line" modelName="DocumentRAMDeltaModel" responsiveWidth="4" />
		</hbox>
		<hbox responsiveWidth="12" border="true" borderTitle="Edit Requests" collapsible="open" pixelHeight="300">
			<chart type="line" modelName="DocumentEditElapsedTimeModel" responsiveWidth="4" />
			<chart type="line" modelName="DocumentEditCPUDeltaModel" responsiveWidth="4" />
			<chart type="line" modelName="DocumentEditRAMDeltaModel" responsiveWidth="4" />
		</hbox>
	</vbox>
	<hbox border="true" borderTitle="System Resources" widgetId="systemResourcesBox" collapsible="open" pixelHeight="300">
		<chart type="line" modelName="SystemCPULoadModel" />
		<chart type="line" modelName="SystemRAMUsageModel" />
	</hbox>
	<actions>
		<defaults />
	</actions>
</view>

