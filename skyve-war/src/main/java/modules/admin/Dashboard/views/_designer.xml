<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="_designer" title="Dashboard"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
	<form>
		<column />
		<column />
		<column />
		<column />
		<column />
		<column />
		<row>
			<item label="Select">
				<combo binding="focusItem.widgetType">
					<onChangedHandlers>
						<rerender clientValidation="false" />
					</onChangedHandlers>
				</combo>
			</item>
			<item>
				<button action="GoToSelector" />
			</item>
			<item>
				<button action="AddWidget" />
			</item>
		</row>
	</form>
	<vbox shrinkWrap="height">
		<blurb invisible="showCustomChartOptions"><![CDATA[<em>Drag and drop items to set your preferred order.</em>]]></blurb>
		<dataGrid binding="dashboardWidgets" selectedIdBinding="selectedExistingItemId" showAdd="false" showZoom="false" invisible="showCustomChartOptions">
			<boundColumn binding="widgetType" />
			<boundColumn binding="title" />
			<onSelectedHandlers>
				<rerender clientValidation="false" />
			</onSelectedHandlers>
		</dataGrid>
	</vbox>
</view>
