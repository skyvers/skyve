<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="admin.importExport.edit.title"
	name="_configureOptions"
	xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
	xmlns="http://www.skyve.org/xml/view"
	xmlns:c="http://www.skyve.org/xml/common"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<vbox border="true"
		borderTitle="admin.importExport.edit.configureOptions.borderTitle"
		widgetId="configureOptions">
		<vbox>
			<form disabled="fileExists">
				<column responsiveWidth="2" />
				<column />
				<column />
				<row>
					<item>
						<spacer />
					</item>
					<item>
						<blurb textAlignment="left">
									<![CDATA[<em>{i18n:admin.importExport.edit.configureOptions.blurb1}</em>]]>
								</blurb>
					</item>
				</row>
				<row>
					<item>
						<combo binding="moduleName">
							<onChangedHandlers>
								<rerender clientValidation="false">
									<properties>
										<c:property key="update">configureOptions</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</combo>
					</item>
				</row>
				<row>
					<item>
						<combo binding="documentName">
							<onChangedHandlers>
								<rerender clientValidation="false">
									<properties>
										<c:property key="update">configureOptions,columns</c:property>
									</properties>
								</rerender>
							</onChangedHandlers>
						</combo>
					</item>
				</row>
				<row>
					<item>
						<checkBox triState="false" binding="fileContainsHeaders" />
					</item>
				</row>
			</form>
			<vbox invisible="showExport">
				<form invisible="fileExists">
					<column responsiveWidth="2" />
					<column />
					<column />
					<row>
						<item>
							<spacer />
						</item>
						<item>
							<button pixelWidth="200"
								action="UploadSimpleImportDataFile">
								<properties>
									<c:property key="update">columns</c:property>
								</properties>
							</button>
						</item>
					</row>
				</form>
				<form visible="fileExists">
					<column responsiveWidth="2" />
					<column />
					<column />
					<row>
						<item>
							<spacer />
						</item>
						<item>
							<blurb escape="false"><![CDATA[<strong><em>{importFileName}</em></strong>{i18n:admin.importExport.edit.configureOptions.blurb2}]]></blurb>
						</item>
						<item>
							<button pixelWidth="200" action="ClearImport" />
						</item>
					</row>
					<row>
						<item>
							<combo binding="loadType" />
						</item>
					</row>
					<row>
						<item>
							<checkBox triState="false " binding="detailedLogging" />
						</item>
					</row>
					<row>
						<item>
							<spacer />
						</item>
						<item>
							<button pixelWidth="200" action="RunImport">
								<properties>
									<c:property key="update">columns</c:property>
								</properties>
							</button>
						</item>
					</row>
				</form>
			</vbox>
		</vbox>
		<vbox>
			<form visible="showExport">
				<column responsiveWidth="2" />
				<column />
				<column />
				<row>
					<item>
						<spacer />
					</item>
					<item>
						<button pixelWidth="200" action="ResetColumns">
							<properties>
								<c:property key="update">columns</c:property>
							</properties>
						</button>
					</item>
				</row>
				<row>
					<item>
						<spacer />
					</item>
					<item>
						<button pixelWidth="200" action="RunExport" />
					</item>
				</row>
			</form>
		</vbox>
	</vbox>
</view>
